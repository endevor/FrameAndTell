<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Frameandtell" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_frameandtell</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Frameandtell</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Frameandtell</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Frameandtell</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Frameandtell</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Frameandtell</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_frameandtell</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_frameandtell</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Frameandtell</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Frameandtell.Widget</item>
    </style>

    <style name="ActionBar.Solid.Frameandtell" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_frameandtell</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_frameandtell</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_frameandtell</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Frameandtell</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="ActionBar.Transparent.Frameandtell" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_frameandtell</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Frameandtell</item>
    </style>

    <style name="PopupMenu.Frameandtell" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_frameandtell</item>
    </style>

    <style name="DropDownListView.Frameandtell" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_frameandtell</item>
    </style>

    <style name="ActionBarTabStyle.Frameandtell" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_frameandtell</item>
    </style>

    <style name="DropDownNav.Frameandtell" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_frameandtell</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_frameandtell</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_frameandtell</item>
    </style>

    <style name="ProgressBar.Frameandtell" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_frameandtell</item>
    </style>

    <style name="ActionButton.CloseMode.Frameandtell" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_frameandtell</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Frameandtell.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Frameandtell</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Frameandtell</item>
    </style>

</resources>