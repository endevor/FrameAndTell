<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newstory_bkgd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewStoryActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/template_3_btn"
        android:onClick="onNextClicked" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="90dp"
       android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/template_4_btn"
        android:onClick="onNextClicked" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/template_1_btn"
        android:onClick="onNextClicked" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/template_2_btn"
        android:onClick="onNextClicked" />
    
        <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/template_2_btn"
        android:onClick="onNextClicked" />

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/template_3_btn"
        android:onClick="onNextClicked" />

</RelativeLayout>