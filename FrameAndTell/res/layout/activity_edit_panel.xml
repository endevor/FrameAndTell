<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditPanelActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:background="@drawable/undo_btn"
        android:onClick="onUndoClicked" />

    <Button
        android:id="@+id/button2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/save_btn"
        android:onClick="onSaveClicked" />

    <Button
        android:id="@+id/button3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"
        android:background="@drawable/delete_btn"
        android:onClick="onCancelClicked" />

    <Button
        android:id="@+id/button5"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/add_text_btn"
        android:onClick="onAddTextClicked" />

    <Button
        android:id="@+id/button4"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button2"
        android:layout_marginBottom="59dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/add_image_btn"
        android:onClick="onAddImageClicked" />

</RelativeLayout>