    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Frameandtell" >
        <activity
            android:name="edu.dartmouth.cs.frameandtell.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.dartmouth.cs.frameandtell.NewStoryActivity"
            android:label="@string/title_activity_new_story" >
        </activity>
        <activity
            android:name="edu.dartmouth.cs.frameandtell.TimelineActivity"
            android:label="@string/title_activity_timeline" >
        </activity>
        <activity
            android:name="edu.dartmouth.cs.frameandtell.EditPanelActivity"
            android:label="@string/title_activity_edit_panel" >
        </activity>
        <activity
            android:name="edu.dartmouth.cs.frameandtell.ReaderActivity"
            android:label="@string/title_activity_reader" >
        </activity>
    </application>

</manifest>
